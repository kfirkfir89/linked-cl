{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": [
    "./.eslintrc.cjs",
    "./*.js",
    "./*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
  ],

}